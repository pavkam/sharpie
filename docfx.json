{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ],
          "files": [
            "Sharpie/*.csproj"
          ]
        }
      ],
      "properties": {
        "TargetFramework": "net9.0"
      },
      "dest": "artifacts/sdk"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.yml"
        ],
        "src": "artifacts/sdk",
        "dest": "api"
      },
      {
        "files": [
          "README.md"
        ],
        "dest": "index.md"
      },
      {
        "files": [
          "CONTRIBUTORS.md"
        ],
        "dest": "CONTRIBUTORS.md"
      },
      {
        "files": [
          "**/*.md",
          "*.md",
          "toc.yml"
        ],
        "exclude": [
          "artifacts/**",
          "lib/**",
          "README.md",
          "LICENSE",
          "AGENTS.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "media/**"
        ]
      },
      {
        "files": [
          "LICENSE"
        ],
        "dest": "LICENSE.md"
      }
    ],
    "dest": "artifacts/_site",
    "template": [
      "default",
      "modern",
      "statictoc"
    ],
    "markdownEngineName": "markdig",
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "transforms": [
      {
        "type": "Transform",
        "source": "index.md",
        "transform": "replace",
        "pattern": "\\(LICENSE\\)",
        "replacement": "(LICENSE.md)"
      },
      {
        "type": "Transform",
        "source": "index.md",
        "transform": "replace",
        "pattern": "\\./LICENSE",
        "replacement": "./LICENSE.md"
      }
    ],
    "globalMetadata": {
      "_appName": "Sharpie",
      "_appTitle": "Sharpie",
      "_enableSearch": true,
      "_appLogoPath": "media/logo-48.png",
      "_appFaviconPath": "media/logo-48.png",
      "_disableContribution": true,
      "_googleAnalyticsTagId": "UA-143067975-1",
      "pdf": false
    }
  }
}
